<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_gym_subscription_list" model="ir.ui.view">
        <field name="name">gym.subscription.list</field>
        <field name="model">gym.subscription</field>
        <field name="arch" type="xml">
            <list decoration-info="state == 'draft'" decoration-success="state == 'active'" decoration-danger="state == 'expired'">
                <field name="name"/>
                <field name="member_id"/>
                <field name="membership_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="view_gym_subscription_form" model="ir.ui.view">
        <field name="name">gym.subscription.form</field>
        <field name="model">gym.subscription</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,expired"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="member_id"/>
                            <field name="membership_id"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_gym_subscription" model="ir.actions.act_window">
        <field name="name">Subscriptions</field>
        <field name="res_model">gym.subscription</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>